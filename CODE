import pandas as pd
import numpy as np

from sklearn.model_selection import train_test_split
from sklearn.preprocessing import MinMaxScaler
from sklearn.metrics import confusion_matrix, accuracy_score, classification_report

from sklearn.naive_bayes import GaussianNB
from sklearn.neighbors import KNeighborsClassifier
from sklearn.tree import DecisionTreeClassifier
from sklearn.svm import SVC
from sklearn.linear_model import LogisticRegression

import matplotlib.pyplot as plt
import seaborn as sns




df = pd.read_csv(r"C:/Users/praga/Downloads/fruits_dataset.csv")

print("Dataset head:")
print(df.head())

print("\nDataset info:")
print(df.info())

print("\nMissing values in each column:")
print(df.isnull().sum())



print("\nStatistical summary of numeric columns:")
print(df.describe())

print("\nUnique taste profiles:")
print(df["taste_profile"].value_counts())

print("\nUnique seasons:")
print(df["season"].value_counts())

numeric_cols = ["sugar_g", "calories", "acidity_pH", "avg_weight_g", "water_percent", "fiber_g_per_100g", "shelf_life_days"]
corr_matrix = df[numeric_cols].corr()

print("\nCorrelation matrix (numeric features):")
print(corr_matrix)

plt.figure(figsize=(8, 6))
sns.heatmap(corr_matrix, annot=True)
plt.title("Correlation Heatmap of Numeric Features")
plt.tight_layout()
plt.show()
